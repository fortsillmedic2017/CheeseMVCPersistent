<h1>@ViewBag.title</h1>

<form method="post">

    @foreach (var menu in ViewBag.menus)
    {
        <input type="checkbox" name="categoryIds" id="@menu.ID" value="@menu.ID" />
        <label for="@menu.ID">@menu.Name</label>
        <br />
    }

    <input type="submit" value="Remove Selected Category(s)" />
</form>

<p></p>

<p><a asp-controller="Menu" asp-action="Index">Menu List</a></p>
<p><a asp-controller="Menu" asp-action="Add">Add Menu</a></p>
