@model IEnumerable<CheeseMVC.Models.Menu>


    <h1>@ViewBag.title</h1>

    <table class="table">
        <tr>
            <th>Menus</th>
        </tr>
        @foreach (var menu in Model)
        {
            <tr>
                <td><a asp-controller="Menu" asp-action="ViewMenu" asp-route-id="@menu.ID">@menu.Name</a></td>
            </tr>
        }

    </table>

    <p></p>
    <button style="background-color:gold"><a asp-controller="Menu" asp-action="Add">Add Menu</a></button>
    <button style="background-color:gold"><a asp-controller="Cheese" asp-action="Remove">Remove Cheese</a></button>
    <button style="background-color:gold"><a asp-controller="Menu" asp-action="Remove">Remove Menu</a></button>
